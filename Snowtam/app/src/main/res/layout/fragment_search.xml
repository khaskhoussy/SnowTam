<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText"
        android:layout_width="392dp"
        android:layout_height="60dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="26dp"
        android:drawableLeft="@drawable/my_icon"
        android:ems="10"
        android:hint="code1;code2;code3;code4"
        android:inputType="textPersonName"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:textAlignment="center"
        android:textColorHighlight="#49a3bf"
        android:textColorLink="#49a3bf"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:background="@drawable/my_button_bg"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/airoport2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/airoport2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="68dp"
        android:clickable="true"
        android:onClick="onClick2"
        android:text="Result 2"

        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/airoport4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/airoport1"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/airoport1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="66dp"
        android:clickable="true"
        android:onClick="onClick1"
        android:text="Result 1"

        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/airoport3"
        app:layout_constraintEnd_toStartOf="@+id/airoport2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/airoport3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="54dp"
        android:clickable="true"
        android:onClick="onClick3"
        android:text="Result 3"

        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/airoport4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/airoport1" />

    <TextView
        android:id="@+id/airoport4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="59dp"
        android:clickable="true"
        android:onClick="onClick4"
        android:text="Result 4 "

        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/airoport3"
        app:layout_constraintTop_toBottomOf="@+id/airoport2" />


</androidx.constraintlayout.widget.ConstraintLayout>